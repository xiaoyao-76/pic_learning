#include "p16f84a.inc"

; CONFIG
; __config 0xFFF1
 __CONFIG _FOSC_XT & _WDTE_OFF & _PWRTE_ON & _CP_OFF
 
RES_VECT CODE 0x0000
 GOTO START
 
START
 BANKSEL TRISA
 MOVLW 0x00
 MOVWF TRISA
 MOVLW 0x01
 MOVWF TRISB
 
LOOP1
 BANKSEL PORTA
 MOVLW 0x00
 MOVWF PORTA
 BTFSC PORTB,0
 GOTO LOOP1
 MOVLW 0x01
 MOVWF PORTA
 
 END


#include "p16f84a.inc"

; CONFIG
; __config 0xFFF1
 __CONFIG _FOSC_XT & _WDTE_OFF & _PWRTE_ON & _CP_OFF
 
RES_VECT CODE 0x0000
 GOTO START
 
START
 BANKSEL TRISA
 MOVLW 0x00
 MOVWF TRISA
 MOVLW 0x01
 MOVWF TRISB
 
LOOP1
 BANKSEL PORTA
 BTFSC PORTB,0
 GOTO LOOP2
 MOVLW 0x01
 MOVWF PORTA
 GOTO LOOP1
 
LOOP2
 MOVLW 0x00
 MOVWF PORTA
 GOTO LOOP1
 
 END


#include "p16f84a.inc"

; CONFIG
; __config 0xFFF1
 __CONFIG _FOSC_XT & _WDTE_OFF & _PWRTE_ON & _CP_OFF
 
RES_VECT CODE 0x0000
 GOTO START
 
START
 BANKSEL TRISA
 MOVLW 0x00
 MOVWF TRISA
 MOVLW 0x0F
 MOVWF TRISB
 
LOOP1
 BANKSEL PORTA
 BTFSC PORTB,0
 GOTO LOOP2
 MOVLW 0x01
 MOVWF PORTA
 GOTO LOOP1

LOOP2
 BTFSC PORTB,1
 GOTO LOOP3
 MOVLW 0x02
 MOVWF PORTA
 GOTO LOOP2
 
LOOP3
 BTFSC PORTB,2
 GOTO LOOP4
 MOVLW 0x04
 MOVWF PORTA
 GOTO LOOP3
 
LOOP4
 BTFSC PORTB,3
 GOTO LOOP5
 MOVLW 0x08
 MOVWF PORTA
 GOTO LOOP4
 
LOOP5
 MOVLW 0x00
 MOVWF PORTA
 GOTO LOOP1
 
 END


#include "p16f84a.inc"

; CONFIG
; __config 0xFFF1
 __CONFIG _FOSC_XT & _WDTE_OFF & _PWRTE_ON & _CP_OFF
 
RES_VECT CODE 0x0000
 GOTO START
 
R1 EQU 0x25
R2 EQU 0x27
 
START
 BANKSEL TRISA
 MOVLW 0x00
 MOVWF TRISA
 MOVLW 0x03
 MOVWF TRISB
 
LOOP1
 BANKSEL PORTA
 BTFSC PORTB,0
 GOTO LOOP2
 MOVLW 0x01
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x03
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x07
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x0F
 MOVWF PORTA
 CALL DELAY
 GOTO LOOP1

LOOP2
 BTFSC PORTB,1
 GOTO LOOP3
 MOVLW 0x08
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x0C
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x0E
 MOVWF PORTA
 CALL DELAY
 MOVLW 0x0F
 MOVWF PORTA
 CALL DELAY
 GOTO LOOP2

LOOP3
 MOVLW 0x00
MOVWF PORTA
GOTO LOOP1

DELAY
 MOVLW D'200'
 MOVWF R1
AGAIN
 MOVLW D'250'
 MOVWF R2
HERE
 DECFSZ R2
 GOTO HERE
 DECFSZ R1
 GOTO AGAIN
 RETURN

 END
